{
    "compilerOptions": {
        "target": "ES2015",
        "lib": ["es6"],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": "src"
        // "paths": {
        //     "@use-case/*": ["use-case/*"],
        //     "@service/*": ["service/*"],
        //     "@util/*": ["util/*"]
        // }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
